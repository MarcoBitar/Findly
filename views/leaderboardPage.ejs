<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Findly Treasures</title>
    <link rel="stylesheet" href="/css/leaderboardPage.css">
    <link href="https://fonts.cdnfonts.com/css/just-me-again-down-here-2" rel="stylesheet">
</head>

<body>
    <%- include('partials/audio') %>
    <%- include('partials/header') %>
        <%- include('partials/menu') %>
            <h2>Leaderboard:</h2>
            <main class="main-content">

                <!-- Podium Section -->
                <div class="podium row text-center">
                    <% if (leaderboards && leaderboards.length>= 3) { %>
                        <div class="col podium-2nd">
                            <h2>2nd</h2>
                            <div class="podium-stand bg-secondary text-white">
                                <%= leaderboards[1].name %>
                                    <br>
                                    <span>
                                        <%= leaderboards[1].points_e %> Points
                                    </span>
                            </div>
                        </div>
                        <div class="col podium-1st">
                            <h2>1st</h2>
                            <div class="podium-stand bg-warning text-dark">
                                <%= leaderboards[0].name %>
                                    <br>
                                    <span>
                                        <%= leaderboards[0].points_e %> Points
                                    </span>
                            </div>
                        </div>
                        <div class="col podium-3rd">
                            <h2>3rd</h2>
                            <div class="podium-stand bg-secondary text-white">
                                <%= leaderboards[2].name %>
                                    <br>
                                    <span>
                                        <%= leaderboards[2].points_e %> Points
                                    </span>
                            </div>
                        </div>
                        <% } else { %>
                            <p>No leaderboard data available.</p>
                        <% } %>
                </div>

                <!-- Table Section -->
                <table class="table table-striped table-hover mt-4">
                    <thead class="thead-dark">
                        <tr>
                            <th>Rank</th>
                            <th>Username</th>
                            <th>Points</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% leaderboards.slice(3).forEach((leaderboard, index)=> { %>
                            <tr>
                                <td>
                                    <%= index + 4 %>
                                </td>
                                <td>
                                    <%= leaderboard.name %>
                                </td>
                                <td>
                                    <%= leaderboard.points_e %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </main>
            </div>
</body>

</html>